<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="50">
        <Label Text="Quantidade" FontSize="20" HorizontalTextAlignment="Center"/>
        <Label x:Name="lblQuantidade" Text="1" FontSize="48" TextColor="Red" HorizontalTextAlignment="Center"/>
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button Clicked="Aumentar" FontSize="48" Text="+" BorderWidth="1" BorderColor="#707070" BackgroundColor="White" WidthRequest="80" HeightRequest="80"/>
            <Button Clicked="Diminuir" FontSize="48" Text="-" BorderWidth="1" BorderColor="#707070" BackgroundColor="White" WidthRequest="80" HeightRequest="80"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
